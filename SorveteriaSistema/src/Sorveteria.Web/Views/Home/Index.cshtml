@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">
        <i class="fas fa-ice-cream"></i> Bem-vindo ao Sistema de Sorveteria
    </h1>
    <p class="lead">Gerencie suas categorias e sorvetes de forma simples e eficiente!</p>
</div>

<div class="row mt-5">
    <div class="col-md-6">
        <div class="card text-center shadow">
            <div class="card-body">
                <i class="fas fa-list fa-5x text-primary mb-3"></i>
                <h5 class="card-title">Categorias</h5>
                <p class="card-text">Gerencie as categorias dos seus sorvetes</p>
                <a asp-controller="Categorias" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-arrow-right"></i> Acessar Categorias
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-center shadow">
            <div class="card-body">
                <i class="fas fa-ice-cream fa-5x text-success mb-3"></i>
                <h5 class="card-title">Sorvetes</h5>
                <p class="card-text">Cadastre e controle seu estoque de sorvetes</p>
                <a asp-controller="Sorvetes" asp-action="Index" class="btn btn-success">
                    <i class="fas fa-arrow-right"></i> Acessar Sorvetes
                </a>
            </div>
        </div>
    </div>
</div>

