@model Sorveteria.Application.ViewModels.CategoriaViewModel

@{
    ViewData["Title"] = "Nova Categoria";
}

<h2><i class="fas fa-plus-circle"></i> Nova Categoria</h2>
<hr />

@* MENSAGENS DE ERRO E SUCESSO *@
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong><i class="fas fa-times-circle"></i> Erro:</strong> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong><i class="fas fa-check-circle"></i> Sucesso:</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="form-group mb-3">
                <label asp-for="Nome" class="form-label">
                    Nome da Categoria <span class="text-danger">*</span>
                </label>
                <input asp-for="Nome" class="form-control" placeholder="Ex: Cremosos, Frutas, Diet..." />
                <span asp-validation-for="Nome" class="text-danger"></span>
                <small class="form-text text-muted">
                    <i class="fas fa-info-circle"></i> O nome deve ser único e ter entre 3 e 100 caracteres
                </small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descricao" class="form-label">
                    Descrição <span class="text-danger">*</span>
                </label>
                <textarea asp-for="Descricao" class="form-control" rows="4" 
                    placeholder="Descreva as características desta categoria..."></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
                <small class="form-text text-muted">
                    <i class="fas fa-info-circle"></i> Mínimo de 10 caracteres
                </small>
            </div>

            <div class="form-check mb-3">
                <input asp-for="Ativo" class="form-check-input" type="checkbox" checked />
                <label asp-for="Ativo" class="form-check-label">
                    Categoria ativa (visível no sistema)
                </label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Salvar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>
        </form>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-info-circle"></i> Informações</h5>
                <ul class="list-unstyled">
                    <li><strong><i class="fas fa-check text-success"></i> Nome:</strong> Único e obrigatório</li>
                    <li><strong><i class="fas fa-check text-success"></i> Descrição:</strong> Mínimo 10 caracteres</li>
                    <li><strong><i class="fas fa-check text-success"></i> Status:</strong> Ativo/Inativo</li>
                </ul>
                
                <hr />
                
                <h6 class="card-subtitle mb-2 text-muted">
                    <i class="fas fa-lightbulb"></i> Dica
                </h6>
                <small>
                    Use nomes claros e descritivos para facilitar a organização dos sorvetes.
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            let timeoutId;
            

            function validarNomeUnico() {
                const nome = $('#Nome').val();
                

                $('#Nome').removeClass('is-invalid is-valid');
                $('#nome-duplicado-erro').remove();
                
                if (!nome || nome.length < 3) {
                    return;
                }
                

                $('#Nome').addClass('border-warning');
                
                $.ajax({
                    url: '/Categorias/ValidarNomeUnico',
                    type: 'GET',
                    data: { nome: nome },
                    success: function(response) {
                        $('#Nome').removeClass('border-warning');
                        
                        if (!response.valido) {
                            $('#Nome').addClass('is-invalid');

                            $('<span id="nome-duplicado-erro" class="text-danger">')
                                .html('<i class="fas fa-exclamation-circle"></i> ' + response.mensagem)
                                .insertAfter('#Nome')
                                .next('small').hide();
                            

                            $('button[type="submit"]').prop('disabled', true);
                        } else {
                            $('#Nome').removeClass('is-invalid').addClass('is-valid');
                            $('#nome-duplicado-erro').remove();
                            $('#Nome').next('small').show();
                            

                            $('button[type="submit"]').prop('disabled', false);
                        }
                    },
                    error: function() {
                        $('#Nome').removeClass('border-warning');
                        console.error('Erro ao validar nome único');
                    }
                });
            }
            

            $('#Nome').on('input', function() {

                clearTimeout(timeoutId);
                timeoutId = setTimeout(validarNomeUnico, 500);
            });
            

            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
}