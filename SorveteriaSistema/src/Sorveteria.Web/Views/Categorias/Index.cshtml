@model IEnumerable<Sorveteria.Application.ViewModels.CategoriaViewModel>

@{
    ViewData["Title"] = "Categorias";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="fas fa-list"></i> Categorias</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nova Categoria
        </a>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-search"></i></span>
            <input type="text" id="searchInput" class="form-control" placeholder="Buscar categorias..." />
        </div>
    </div>
</div>

<div id="categoriasContainer">
    @await Html.PartialAsync("_CategoriasList", Model)
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#searchInput').on('keyup', function () {
                var termo = $(this).val();
                
                $.ajax({
                    url: '@Url.Action("Search", "Categorias")',
                    type: 'GET',
                    data: { termo: termo },
                    success: function (result) {
                        $('#categoriasContainer').html(result);
                    },
                    error: function () {
                        alert('Erro ao buscar categorias');
                    }
                });
            });
        });
    </script>
}