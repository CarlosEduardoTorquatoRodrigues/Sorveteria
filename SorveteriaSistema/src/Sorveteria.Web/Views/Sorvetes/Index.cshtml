@model IEnumerable<Sorveteria.Application.ViewModels.SorveteViewModel>

@{
    ViewData["Title"] = "Sorvetes";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h2><i class="fas fa-ice-cream"></i> Sorvetes</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Novo Sorvete
        </a>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-6">
        <div class="input-group">
            <span class="input-group-text"><i class="fas fa-search"></i></span>
            <input type="text" id="searchInput" class="form-control" placeholder="Buscar sorvetes..." />
        </div>
    </div>
</div>

<div id="sorvetesContainer">
    @await Html.PartialAsync("_SorvetesList", Model)
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#searchInput').on('keyup', function () {
                var termo = $(this).val();
                
                $.ajax({
                    url: '@Url.Action("Search", "Sorvetes")',
                    type: 'GET',
                    data: { termo: termo },
                    success: function (result) {
                        $('#sorvetesContainer').html(result);
                    },
                    error: function () {
                        alert('Erro ao buscar sorvetes');
                    }
                });
            });
        });
    </script>
}